    <!-- CHART.JS LOGIC -->
    <script>
        // --- UTILITY: Label Splitting for Wrapping (16 char limit) ---
        function splitLabel(label) {
            if (typeof label !== 'string' || label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= 16) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- COMMON CHART OPTIONS ---
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                tooltip: {
                    backgroundColor: 'rgba(30, 58, 138, 0.9)', // Primary Blue
                    padding: 12,
                    titleFont: { size: 13, family: 'Poppins' },
                    bodyFont: { size: 12, family: 'Roboto' },
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                },
                legend: {
                    display: true,
                    labels: {
                        font: { family: 'Poppins', size: 11 },
                        usePointStyle: true,
                    }
                }
            }
        };

        // --- 1. CHART: POSITIVO (Doughnut - Autonomy - CORRECTED) ---
        const ctxPositivo = document.getElementById('chartPositivo').getContext('2d');
        new Chart(ctxPositivo, {
            type: 'doughnut',
            data: {
                labels: ['Lideran√ßa do Projeto', 'Apoio Pontual'],
                datasets: [{
                    data: [100, 0],
                    backgroundColor: ['#3B82F6', '#E5E7EB'], // Blue vs Gray
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                ...commonOptions,
                cutout: '70%',
                plugins: {
                    ...commonOptions.plugins,
                    legend: { display: false },
                    tooltip: { enabled: false }
                }
            },
            plugins: [{
                id: 'textCenter',
                beforeDraw: function(chart) {
                    var width = chart.width,
                        height = chart.height,
                        ctx = chart.ctx;
                    ctx.restore();
                    var fontSize = (height / 114).toFixed(2);
                    ctx.font = "bold " + fontSize + "em sans-serif";
                    ctx.textBaseline = "middle";
                    ctx.fillStyle = "#1E3A8A";
                    var text = "Alta", // Changed from 100% to Alta to denote High Autonomy
                        textX = Math.round((width - ctx.measureText(text).width) / 2),
                        textY = height / 2;
                    ctx.fillText(text, textX, textY);
                    ctx.save();
                }
            }]
        });

        // --- 2. CHART: FIEMG (Horizontal Bar - Speed) ---
        const ctxFiemg = document.getElementById('chartFiemg').getContext('2d');
        new Chart(ctxFiemg, {
            type: 'bar',
            data: {
                labels: ['Prazo Padr√£o (Mercado)', 'Minha Entrega (FIEMG)'].map(splitLabel),
                datasets: [{
                    label: 'Dias para Conclus√£o',
                    data: [90, 39], // 90 is benchmark, 39 is actual
                    backgroundColor: ['#E5E7EB', '#F59E0B'], // Gray vs Amber (Highlight)
                    borderRadius: 4,
                    barPercentage: 0.6
                }]
            },
            options: {
                indexAxis: 'y',
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: { display: false }
                },
                scales: {
                    x: {
                        grid: { display: false },
                        ticks: { display: false } // Clean look
                    },
                    y: {
                        grid: { display: false },
                        ticks: { font: { family: 'Poppins', size: 11 } }
                    }
                }
            }
        });

        // --- 3. CHART: METABASE (Vertical Bar - Growth - CORRECTED) ---
        const ctxMetabase = document.getElementById('chartMetabase').getContext('2d');
        new Chart(ctxMetabase, {
            type: 'bar',
            data: {
                labels: ['Cen√°rio Inicial', 'Cen√°rio Atual'],
                datasets: [{
                    label: 'M√≥dulos Integrados',
                    data: [2, 7],
                    backgroundColor: ['#93C5FD', '#1E3A8A'], // Light Blue to Deep Blue
                    borderRadius: 6,
                    barPercentage: 0.5
                }]
            },
            options: {
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#F3F4F6' },
                        title: { display: true, text: 'Qtd. Integra√ß√µes' }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // --- 4. CHART: EFFICIENCY (Pie - Time Dedication) ---
        const ctxEfficiency = document.getElementById('chartEfficiency').getContext('2d');
        new Chart(ctxEfficiency, {
            type: 'pie',
            data: {
                labels: ['Positivo (Reten√ß√£o)', 'Metabase (Inova√ß√£o)', 'Apoio (Ops)'].map(splitLabel),
                datasets: [{
                    data: [60, 30, 20],
                    backgroundColor: ['#3B82F6', '#F59E0B', '#9CA3AF'], // Blue, Amber, Gray
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
